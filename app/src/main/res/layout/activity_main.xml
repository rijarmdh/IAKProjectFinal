<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@android:color/white"
            android:foreground="@color/cardview_shadow_end_color"
            app:cardElevation="@dimen/cardview_compat_inset_shadow"
            tools:context="com.example.riza.projekiak.MainActivity"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:background="@drawable/frenchfries"
                    android:layout_marginBottom="20dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@android:string/cancel"
                        android:text="W A R U N G   B U R G E R"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="12pt" />
                </RelativeLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warung Burger"
                    android:textSize="15pt"
                    android:textColor="@android:color/black"
                    />

                <TextView

                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7724567"
                    android:textSize="10pt"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kulonprogo, Daerah Istimewa Yogyakarta"
                    android:textSize="10pt"
                    android:textColor="@android:color/black"
                    />

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:src="@drawable/phoneflat"
                        android:onClick="callWarung"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        />


                    <ImageView
                        android:src="@drawable/orderfood"
                        android:onClick="PesanWrBurger"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
</LinearLayout>
